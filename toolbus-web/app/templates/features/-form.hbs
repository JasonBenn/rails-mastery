<form {{action "save" on="submit"}}>
  <h2>{{errorMessage}}</h2>
  <fieldset>
    {{input value=model.text placeholder="Name"}}<br>
    {{input value=model.description placeholder="Description"}}
    <input type="submit" value="Save" class="primary">
    <button {{action "cancel"}}>Cancel</button>  
  </fieldset>
</form>
