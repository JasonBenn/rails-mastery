<form {{action "save" on="submit"}}>
  <p>
    <label>
      Text:
      {{input value = model.text}}
    </label>
  </p>
  <p>
    <label>
      Description
      {{input value = model.description}}
    </label>
  </p>
  <input type="submit" value="Save">
  <button {{action "cancel"}}>Cancel</button>
</form>
