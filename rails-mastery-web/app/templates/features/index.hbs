<h1>Features index</h1>

<p>Total features: {{model.length}}</p>
<ul>
  {{#each feature in model}}
    <li>
      <strong>{{#link-to 'features.show' feature}}{{feature.text}}{{/link-to}}</strong> {{feature.truncatedDescription}}
      <em>{{#link-to 'features.edit' feature}}edit{{/link-to}}</em>
      <button {{action 'delete' feature}}>delete</button>
    </li>
  {{/each}}
</ul>

